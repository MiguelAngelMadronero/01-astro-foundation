---
import { ViewTransitions } from "astro:transitions";
import Navbar from "../components/Navbar.astro";
import '../styles/global.css';
const name = "Miguel Ángel Madroñero Sequeira";
interface Props {
	title: string;
	age?: number;
	isActive?: boolean;
}
const {title} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions/>
	</head>
	<body>
		<Navbar/>
		<h1>{name}</h1>
		<main>
			<slot />
		</main>

		<p>Momento actual: {new Date().toLocaleTimeString()}</p>
		<p id="current-time">Momento actual real:</p>
		<footer>
			2023
		</footer>
		<script>
			const currentTime = document.getElementById("current-time") as HTMLElement;
			const footer = document.querySelector('footer') as HTMLElement;
			const currentYear: number = new Date().getFullYear();
			const time = new Date().toLocaleTimeString();
			footer.innerText = `Año: ${ currentYear }` 
			currentTime.textContent += ` ${time}`
		</script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

	h1{
		color:blue;
	}
</style>
